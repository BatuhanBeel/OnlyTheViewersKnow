<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="90dp">

    <Button
        android:id="@+id/level_item_button"
        style="@style/Widget.Rexuses.LevelButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:foreground="@drawable/ic_lock"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@color/on_primary"
        android:textSize="14sp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/stars_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/level_item_button"
        app:layout_constraintEnd_toEndOf="@id/level_item_button"
        app:layout_constraintTop_toBottomOf="@id/level_item_button"
        android:visibility="invisible"
        >
        <ImageView
            android:id="@+id/first_star_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_star"
            android:elevation="2dp" />
        <ImageView
            android:id="@+id/second_star_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_star"
            android:elevation="2dp" />
        <ImageView
            android:id="@+id/third_star_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_star"
            android:elevation="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


