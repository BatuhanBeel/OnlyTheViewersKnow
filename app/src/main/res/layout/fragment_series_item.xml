<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="180dp"
    android:layout_margin="3dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/series_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:contentDescription="@string/series_image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/level_background"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/level"
        android:visibility="gone"
        app:cardBackgroundColor="@color/level_zero_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/level_background"
            app:layout_constraintEnd_toEndOf="@id/level_background"
            app:layout_constraintStart_toStartOf="@id/level_background"
            app:layout_constraintTop_toTopOf="@id/level_background" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>